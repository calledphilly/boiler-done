{
  "name": "@workspace/db",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "default": "./dist/schema.js"
    },
    "./schema/auth": {
      "types": "./dist/schema/auth.d.ts",
      "default": "./dist/schema/auth.js"
    }
  },
  "devDependencies": {
    "@workspace/typescript": "workspace:*",
    "@types/bun": "latest",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.20.5"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "pg": "^8.16.3"
  }
}